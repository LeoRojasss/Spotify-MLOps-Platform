# ============================================
# GOOGLE CLOUD PLATFORM
# ============================================
PROJECT_ID=spotify-mlops-platform
REGION=us-central1
GCS_BUCKET=gs://spotify-mlops-platform-bucket
BUCKET_NAME=spotify-mlops-platform-bucket

# BigQuery
BQ_PROJECT=spotify-mlops-platform
BQ_DATASET=spotify
BQ_TABLE=spotify_events
BQ_DATASET_RAW=raw
BQ_DATASET_FEATURES=features
BQ_DATASET_MONITORING=model_monitoring

# ============================================
# KAFKA
# ============================================
KAFKA_BROKER=localhost:29092
KAFKA_TOPIC=spotify-events

# ============================================
# MONGODB
# ============================================
MONGO_URI=mongodb://localhost:27017
MONGO_DB=spotify_db
MONGO_COLLECTION=events

# ============================================
# SPOTIFY API
# ============================================
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ============================================
# VERTEX AI
# ============================================
VERTEX_PIPELINE_NAME=spotify-train-pipeline
VERTEX_MODEL_NAME=skip-predictor
PIPELINE_ROOT=gs://spotify-mlops-platform-bucket/pipelines
PIPELINE_TEMPLATE=gs://spotify-mlops-platform-bucket/pipelines/spotify_pipeline.yaml
PIPELINE_FILENAME=spotify_pipeline.yaml

# ============================================
# CLOUD RUN / ENDPOINTS
# ============================================
PREDICT_SERVICE_NAME=spotify-predictor
ENDPOINT_ID=your_endpoint_id_here

# ============================================
# ML PARAMETERS
# ============================================
THRESHOLD=0.75

# ============================================
# GENERAL
# ============================================
ENV=development
OUTPUT_PATH=./data/raw
